@model IEnumerable<TaxFiler.Model.Dto.TransactionDto>

<div class="text-center">
    <h2>Transactions</h2>
</div>


<div class="text-left row">
    <div  class="col-md-12" >
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="text-left row">
                <div  class="col-md-6" ><input type="file" name="file" class="form-control"/> </div>
                <div  class="col-md-6" ><button type="submit" class="btn btn-primary">Upload</button></div>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Net Amount</th>
        <th>Gross Amount</th>
        <th>Tax Amount</th>
        <th>Tax Rate</th>
        <th>Counterparty</th>
        <th>Transaction Reference</th>
        <th>Transaction DateTime</th>
        <th>Transaction Note</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var transaction in Model)
    {
        <tr>
            <td>@transaction.Id</td>
            <td>@transaction.NetAmount</td>
            <td>@transaction.GrossAmount</td>
            <td>@transaction.TaxAmount</td>
            <td>@transaction.TaxRate</td>
            <td>@transaction.Counterparty</td>
            <td>@transaction.TransactionReference</td>
            <td>@transaction.TransactionDateTime</td>
            <td>@transaction.TransactionNote</td>

            <td>
                @Html.ActionLink("Edit", "EditTransaction", "Transactions", 
      new { transactionId = transaction.Id , yearMonth = ViewBag.YearMonth }, 
    new { @class = "btn btn-secondary" })
            </td>
            <td>
                <form asp-action="DeleteTransaction" asp-controller="Transactions" method="post" asp-route-id="@transaction.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
